DOCTYPE
html
    head
        meta(charset="UTF-8")
        title MediCO form
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

        style.
            * {
                margin: 0;
                padding: 0;
            }
            .header {
                background-color: burlywood;
                width: 100vw;
                height: 200px;
            }
            .brand {
                padding-left: 70px;
                padding-top: 7%;
                text-decoration: none;
                color: darkgreen;
                font-size: 4rem;
                font-weight: 400;
                letter-spacing: 3px;
            }
            .navbar {
                display: inline-block;
                padding-top: 8%;
                padding-left: 100px;
            }
            .nav-item {
                text-decoration: none;
                color: darkgreen;
                font-size: 2.5rem;
                font-weight: 300;
                padding-left: 40px;
            }
            .container {
                margin-top: 20%;
            }
            .form-input {
                margin-top: 80px;
            }
            .form-control {
                font-size: 3rem;
                height: 100px;
            }
            .form-label {
                font-size: 3.4rem;
            }
            .btn {
                height: 100px;
                width: 200px;
                margin-top: 50px;
                font-size: 2.5rem;
            }

    body 
        nav(class="header")

                a(class="brand" href="/") MEDICO


                div(class="navbar")

                    a(class="nav-item" href="/form") Add medicine

                    a(class="nav-item" href="/inventory") Inventory

        div(class="container")
            div(class="row")
                div(class="col-lg-12")
                    form(method="post" action="/added" class="form-group")
                        div(class="form-input")
                            label(for="name" class="form-label") Medicine name
                            input(type="text" id="name" name="name" class="form-control")

                        div(class="form-input")
                            label(for="count" class="form-label") No of medicines
                            input(type="number" id="count" name="count" class="form-control")

                        div(class="form-input")
                            label(for="brand" class="form-label") Brand
                            input(type="text" id="brand" name="brand" class="form-control")

                        button(type="submit" class="btn btn-primary") Add    