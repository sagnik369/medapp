DOCTYPE
html
    head
        meta(charset="UTF-8")
        title MediCO inventory
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

        style. 
            body {
                margin: 0;
                padding: 0;
            }
            .nav {
                background-color: burlywood;
                width: 100vw;
                height: 200px;
            }
            .brand {
                padding-left: 70px;
                padding-top: 7%;
                text-decoration: none;
                color: darkgreen;
                font-size: 50px;
                font-weight: 400;
                letter-spacing: 3px;
            }
            .navbar-nav {
                display: inline-block;
                padding-top: 8%;
                padding-left: 100px;
            }
            .nav-item {
                text-decoration: none;
                color: darkgreen;
                font-size: 40px;
                font-weight: 100;
                padding-left: 40px;
            }
            .thead {
                height: 100px;
                font-size: 50px;
            }
            .trow {
                font-size: 35px;
                font-weight: 300;
            }
            .tda {
                text-decoration: none;
                background-color: blue;
                color: white;
                padding: 7px;
                border-radius: 3px;
                font-size: 0.7em; 
            }
            .tdb {
                text-decoration: none;
                background-color: red;
                color: white;
                padding: 7px;
                border-radius: 3px;
                font-size: 0.7em;
            }
            
    body

        nav(class="nav")

                a(class="brand" href="/") MEDICO


                div(class="navbar-nav")

                    a(class="nav-item" href="/form") Add medicine

                    a(class="nav-item" href="/inventory") Inventory
        
        table(class="table")
            thead
                tr(class="thead")
                    th Name
                    th No.
                    th Brand
                    th Change
                    th Delete
                each item in items
                 tr(class="trow")
                    td #{item.name}
                    td #{item.count}
                    td #{item.brand}
                    td
                      a(class="tda" href="/change") Change
                    td
                        form(method="post") 
                            button(type="button" href="/delete/#{item.MID}" class="tdb") Delete
